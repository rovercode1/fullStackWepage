<% include ../partials/header %>
<section id="new">
  <div class="container">
   <h1>Edit Comment on: '<%= product.title %>'</h1>
    <form action="/shop/<%= product._id %>/comment/<%= comment._id  %>/edit?_method=PUT" method="POST">
      <div class="form-group" >
        <input class="form-control" min="1" max="15"value="<%= comment.author  %>"type="text" name="comment[author]" placeholder="Enter Username" required>
      </div>
      <div class="form-group">
        <input class="form-control" min="1" max="140"value="<%= comment.text %>"type="text" name="comment[text]"  placeholder="What's on your mind?"required>
      </div>
    <button type="submit" class="btn btn-primary">Submit</button>
    </form>
  </div>
</section>
<% include ../partials/footer %>