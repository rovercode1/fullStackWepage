<% include ../partials/header %>
<section id="search">
  <h1>Search</h1>
<div class="container">
  <input class="form-control"type="text" id="filterInput">
<ul class="nav nav-tabs" id="myTab" role="tablist">
<li class="nav-item">
<a class="nav-link active" id="product-tab" data-toggle="tab" href="#product" role="tab" aria-controls="product" >Product</a>
</li>
<li class="nav-item">
<a class="nav-link" id="user-tab" data-toggle="tab" href="#user" role="tab" aria-controls="user" >User</a>
</li>
</ul>
<div class="tab-content" id="myTabContent">
  <div class="tab-pane fade show active" id="product" role="tabpanel" aria-labelledby="product-tab">
    <div id="productList">
      <%  product.forEach(function(product){%>
        <div id="productBox"class="product">
          <div class="image">
            <img  src="<%= product.image %>">
          </div>
          <div id="productDesc">
            <p style="font-size:12px;">by <a href="#"><%= product.author.username  %></a></p>
            <p>
              <a id="productTitle"href="/shop/<%= product._id %>"><%=  product.title %></a>
            </p>
          </div>
        </div>
      <% }) %>
    </div>
  </div>
<div class="tab-pane fade" id="user" role="tabpanel" aria-labelledby="user-tab">
  <div id="usertList">
    <%  users.forEach(function(user){%>
      <div id="userBox"class="user">
        <div id="userDesc">
          <p>
            <a id="userTitle"href="/usr/<%= user._id %>"><%=  user.username %></a>
          </p>
        </div>
      </div>
    <% }) %>
  </div>
</div>
</div>
</div>
</section>
<% include ../partials/footer %>