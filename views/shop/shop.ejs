<% include ../partials/header %>
<section id="shop">
  <div class="container-fluid">
    <h1>New Arrivals</h1>
      <div class="container">
        <div class="row">
            <% product.forEach(function(product){%>
            <div class="col-lg-3 col-md-4 col-sm-6 col-xs-6">
              <div class="products">
                <div class="image">
                  <a  href="/shop/<%= product._id %>">
                    <img id="productImage"src="<%= product.image %>">
                  </a>
                </div>
                <div class="title">
                  <p><%= product.title %></p>
                </div>
                <div class="price">
                  <p>Â£<%= product.price  %>.00</p>
                </div>
                <div class="buttons">
                  <button id="myBtn" class="btn btn-danger btn-sm">Delete</button>
                    <!-- The Modal -->
                    <div id="myModal" class="modal">
                      <!-- Modal content -->
                      <div class="modal-content">
                        <span class="close">&times;</span>
                        <p>Are you sure your want to delete this product?</p>
                        <form action="/shop/<%= product._id %>?_method=DELETE" method="POST">
                           <button type="submit" class="btn btn-danger">Yes</button>
                        </form>
                      </div>
                    </div>
                </div>
              </div>
            </div>
            <% }) %>
        </div>
      </div>
  </div>
</section>
<% include ../partials/footer %>